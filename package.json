{
  "name": "codex-in-plain-english",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "deploy": "npm run build && gh-pages -d dist",
    "test:e2e": "playwright test",
    "test:e2e:update": "playwright test --update-snapshots",
    "test:e2e:report": "playwright show-report",
    "remotion:capture-shots": "node scripts/capture-remotion-shots.mjs",
    "remotion:capture-clips": "node scripts/capture-remotion-clips.mjs",
    "remotion:studio": "remotion studio src/remotion/index.ts",
    "remotion:render:16x9": "remotion render src/remotion/index.ts CodexTeaser16x9 out/codex-in-plain-english-teaser-16x9.mp4 --overwrite",
    "remotion:render:9x16": "remotion render src/remotion/index.ts CodexTeaser9x16 out/codex-in-plain-english-teaser-9x16.mp4 --overwrite"
  },
  "dependencies": {
    "canvas-confetti": "^1.9.4",
    "framer-motion": "^12.34.0",
    "lucide-react": "^0.563.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.13.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.56.1",
    "@remotion/cli": "^4.0.429",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "agentation": "^2.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "gh-pages": "^6.3.0",
    "globals": "^16.5.0",
    "remotion": "^4.0.429",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1"
  }
}
